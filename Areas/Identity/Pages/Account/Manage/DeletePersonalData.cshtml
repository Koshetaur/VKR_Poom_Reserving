@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Удалить персональные данные";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Ваш аккаунт будет полностью удалён без возможности восстановления.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" aria-required="true" />
                <label asp-for="Input.Password" class="form-label">Пароль</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-100 btn btn-lg btn-danger" type="submit">Удалить аккаунт</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
